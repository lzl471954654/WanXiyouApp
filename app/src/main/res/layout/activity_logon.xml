<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/logon_background"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:id="@+id/logon_layout_center_line"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/logon_layout_center_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:id="@+id/logon_layout_another_line"
        />
    <ImageView
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_above="@id/logon_layout_center_line"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:id="@+id/logon_layout_logo_image"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="请输入教务系统账号"
        android:layout_alignBottom="@id/logon_layout_another_line"
        android:id="@+id/logon_layout_id_layout"
        android:textColorHint="@color/icons"
        android:layout_marginStart="@dimen/logon_margin"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logon_layout_id"
            android:textColor="@color/icons"
            android:inputType="number"
            android:maxLength="8"
            android:drawableEnd="@mipmap/clear_text"
            android:paddingEnd="16dp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="请输入教务系统密码"
        android:layout_below="@id/logon_layout_id_layout"
        android:id="@+id/logon_layout_password_layout"
        android:textColorHint="@color/icons"
        android:layout_marginStart="@dimen/logon_margin"
        android:layout_marginTop="8dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/accent"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logon_layout_password"
            android:textColor="@color/icons"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/logon_layout_image_verification"
        android:layout_below="@id/logon_layout_password_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:layout_below="@id/logon_layout_password_layout"
        android:id="@+id/logon_layout_verification_layout"
        android:layout_toLeftOf="@id/logon_layout_image_verification"
        android:textColorHint="@color/icons"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logon_layout_verification"
            android:textColor="@color/icons"
            android:textColorLink="@color/icons"
            android:textColorHighlight="@color/icons"
            android:inputType="text"
            android:maxLength="4"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:text="@string/logon_button"
        android:textColor="@color/icons"
        android:background="@drawable/shape_logon_button"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:layout_below="@id/logon_layout_verification_layout"
        android:id="@+id/logon_layout_logon_btn"
        android:layout_marginTop="32dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过登陆"
        android:textColor="@color/icons"
        android:textSize="14sp"
        android:layout_below="@id/logon_layout_logon_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/logon_layout_escape_logon_btn"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="@color/icons"
        android:layout_below="@id/logon_layout_escape_logon_btn"
        android:layout_alignStart="@id/logon_layout_escape_logon_btn"
        android:layout_alignEnd="@id/logon_layout_escape_logon_btn"
        />

</RelativeLayout>