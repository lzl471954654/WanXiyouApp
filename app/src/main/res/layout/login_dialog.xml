<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:layout_margin="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:textColor="@color/primary_dark"
            android:id="@+id/login_text"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入账号"
            android:id="@+id/login_username_layout"
            android:layout_marginStart="16dp"
            android:layout_below="@id/login_text"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_username"
                android:maxLines="1"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_pass_layout"
            android:hint="请输入密码"
            android:layout_below="@id/login_username_layout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_password"
                android:inputType="textPassword"
                android:maxLines="1"
                />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_alignEnd="@id/login_pass_layout"
            android:layout_below="@id/login_pass_layout"
            android:id="@+id/scret_code_image"
            android:layout_marginStart="16dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pass_layout"
            android:id="@+id/login_scret_layout"
            android:layout_marginStart="16dp"
            android:layout_toLeftOf="@id/scret_code_image"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:id="@+id/scret_code_input"
                android:maxLines="1"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_marginTop="16dp"
            android:id="@+id/login_button"
            android:layout_width="72dp"
            android:layout_height="38dp"
            android:text="登陆"
            android:layout_marginEnd="11dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_below="@+id/login_scret_layout"
            android:layout_alignEnd="@+id/login_pass_layout"
            android:background="@drawable/login_button_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:id="@+id/login_remember_pass_text"
            android:layout_below="@id/login_scret_layout"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@id/login_pass_layout"

            />
        <CheckBox
            android:layout_marginTop="8dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/login_remember_pass"
            android:checked="true"
            android:layout_below="@id/login_scret_layout"
            android:layout_toRightOf="@id/login_remember_pass_text"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>